<%= form_with(model: round, class: "space-y-4") do |form| %>
  <% if round.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded">
      <h3 class="font-bold mb-2"><%= pluralize(round.errors.count, "error") %> prohibited this round from being saved:</h3>
      <ul class="list-disc list-inside">
        <% round.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :roi, "ROI (%)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :roi, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :jackpot_percent, "Jackpot (%)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :jackpot_percent, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :decay, "Decay (%)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :decay, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :minimum_deposit, "Minimum Deposit (BTC)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :minimum_deposit, step: 0.01, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :maximum_deposit, "Maximum Deposit (BTC)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :maximum_deposit, step: 0.01, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :expiration, "Expiration (hours)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :expiration, step: 0.1, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :first_payout_address, "Your Bitcoin Address", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :first_payout_address, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="flex justify-end">
    <%= form.submit "Create Round", class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
<% end %>
